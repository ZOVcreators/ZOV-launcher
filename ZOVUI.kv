<ZOVUI>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: root.height * 0.1  # 10% от высоты окна

            Widget:
                size_hint_x: 1
                canvas.before:
                    Color:
                        rgba: (0.8, 0.2, 0.2, 1)  # Красный цвет
                    Rectangle:
                        size: self.size
                        pos: self.pos

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 1
            canvas.before:
                Color:
                    rgba: (0.2, 0.8, 0.2, 1)  # Зеленый фон
                Rectangle:
                    size: self.size
                    pos: self.pos

    Button:
        id: my_button
        text: 'Click Me'
        size_hint: None, None
        width: min(root.width * 0.4, root.height * 0.1 * 4)  # 40% от ширины окна или 10% от высоты окна, в зависимости от того, что меньше
        height: self.width / 4
        pos_hint: {'center_x': 0.55, 'center_y': 0.90}  # Позиция
        on_release: root.JavaStarting()

    BoxLayout:
        size_hint: None, None
        size: root.width * 0.3, root.height * 1  # Размер
        pos: 0, root.height * 0  # Позиция
        canvas.before:
            Color:
                rgba: (0.2, 0.2, 0.8, 1)  # Синий цвет
            Rectangle:
                size: self.size
                pos: self.pos